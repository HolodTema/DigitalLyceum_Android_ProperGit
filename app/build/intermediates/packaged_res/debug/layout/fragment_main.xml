<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/linearDayOfWeekHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_rectangle_secondary_variant"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/textDayOfWeek"
                    style="@style/textPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="Monday" />
                <Button
                    android:id="@+id/buttonSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/button_rectangle_round"
                    android:text="@string/schedule"
                    android:layout_gravity="end|center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearScheduleMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/linear_rectangle_secondary_variant"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/textNoLessons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_lessons_today"
                style="@style/textPrimary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:gravity="center"
                android:background="@drawable/linear_rectangle_secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/linear_rectangle_secondary"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textTimeToNextLesson"
                    style="@style/textPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="12 minutes left to the lesson" />

                <TextView
                    android:id="@+id/textTimeToHolidays"
                    style="@style/textPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="20 days to the holidays" />
            </LinearLayout>

            <TextView
                android:id="@+id/textEvents"
                style="@style/textPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_rectangle_secondary"
                android:gravity="center"
                android:padding="10dp"
                android:text="some events and news"
                android:layout_marginVertical="20dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>