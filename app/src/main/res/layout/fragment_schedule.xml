<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScheduleFragment"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/linearScheduleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_rectangle_secondary_variant"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textScheduleForGrade"
            style="@style/textPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:layout_marginStart="20dp"
            android:text="Schedule for 1A" />
        <Button
            android:id="@+id/buttonChangeGrade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/button_rectangle_round"
            android:text="@string/change_grade"
            android:paddingVertical="0dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="end|center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWeekType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_rectangle_secondary_variant"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textWeekType"
            style="@style/textPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:layout_marginStart="20dp"
            android:text="The week type" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spinnerWeekType"
            style="@style/button_rectangle_round"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="20dp"
        android:id="@+id/tabLayoutSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textAllCaps="false"
        android:background="@drawable/tabs_shape"
        app:tabBackground="@drawable/tabs_selector"
        app:tabSelectedTextColor="?attr/colorOnSecondary"
        app:tabTextColor="?attr/colorOnSecondary"
        app:tabPadding="0dp"
        app:tabIndicator="@drawable/tabs_indicator"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="20dp"
        android:id="@+id/viewPagerSchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>