<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainMenuActivity">

    <TextView
        android:id="@+id/textWarningLessonsMustNotBeActual"
        style="@style/textWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warning_lessons_must_not_be_actual"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSchool"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/lyceum_background"
        app:layout_constraintTop_toBottomOf="@id/textWarningLessonsMustNotBeActual"
        tools:layout_editor_absoluteX="0dp" />
    <ImageView
        android:id="@+id/buttonSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="@id/imageSchool"
        app:layout_constraintTop_toTopOf="@+id/imageSchool"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/linearSchoolInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/main_menu_round_white_background"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageSchool">

        <TextView
            android:id="@+id/textSchoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Лицей 2"
            android:textSize="30sp"
            style="@style/textPrimary"/>

        <TextView
            android:id="@+id/textSchoolAddress"
            style="@style/textSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="г. Иркутск, пер. Волконского, 7" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSchoolPhoneNumber"
            android:text="8 800 555 35 35"
            android:gravity="center"
            style="@style/textSecondary"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearNextLesson"
        style="@style/linearMainMenuElement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearSchoolInfo">

        <TextView
            style="@style/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/next_lesson_is_in" />

        <TextView
            android:id="@+id/textNextLessonIsIn"
            style="@style/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_lesson_is_in_time"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNextLessonName"
            android:text="Окружающий мир"
            style="@style/textPrimary"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNextLessonTimes"
            android:text="00:00 - 01:00"
            style="@style/textSecondary"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tabMenuElements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearNextLesson"
        android:layout_marginTop="10dp">
        <TableRow>
            <LinearLayout
                android:id="@+id/linearMenuElementScheduleLessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/linearMainMenuElement">
                <TextView
                    style="@style/textPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Расписание\nуроков"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_schedule_lessons" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearMenuElementScheduleBreaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/linearMainMenuElement">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Расписание\nзвонков"
                    android:gravity="center"
                    style="@style/textPrimary"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_schedule_breaks" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>