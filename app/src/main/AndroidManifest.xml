<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lyceumapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LyceumApp"
        tools:targetApi="31">
        <activity
            android:name=".activity.NoSubgroupsForGradeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ChooseSubgroupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NoSchoolsActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.NoGradesForSchoolActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ChooseGradeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NoResponseActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LessonsScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>