<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lyceumapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.lyceumapp.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.lyceumapp.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LyceumApp" >
        <activity
            android:name="com.example.lyceumapp.activity.NoSubgroupsForGradeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.ChooseSubgroupActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.NoSchoolsActivity"
            android:exported="false" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.example.lyceumapp.activity.NoGradesForSchoolActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.ChooseGradeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.NoResponseActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.activity.MainMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.LyceumApp.NoActionBar" />
        <activity
            android:name="com.example.lyceumapp.activity.LessonsScheduleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lyceumapp.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.lyceumapp.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>